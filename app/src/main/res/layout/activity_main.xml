<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guilherme.trabalhofinal.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Fundo">

        <TextView
            android:id="@+id/tvPedidosAndamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedidos em Andamento"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@drawable/border_radius"
            android:layout_below="@+id/tvPedidosAndamento"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">

        </LinearLayout>

        <TextView
            android:id="@+id/tvPedidosConcluidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Pedidos ConcluÃ­dos"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@drawable/border_radius"
            android:layout_below="@+id/tvPedidosConcluidos"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">

        </LinearLayout>

        <Button
            android:id="@+id/btnNovoPedido"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Novo Pedido"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/Botao"/>

    </RelativeLayout>

</RelativeLayout>
